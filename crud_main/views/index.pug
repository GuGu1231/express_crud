    header.d-flex.flex-wrap.align-items-center.justify-content-center.justify-content-md-between.py-3.mb-4.border-bottom
        div.col-md-3.mb-2.mb-md-0
            a.d-inline-flex.link-body-emphasis.text-decoration-none(href="/")
                svg.bi(width="40", height="32", role="img", aria-label="Bootstrap")
                    use(xlink:href="#bootstrap")
        ul.nav.col-12.col-md-auto.mb-2.justify-content-center.mb-md-0
            li
                a.nav-link.px-2.link-secondary(href="#") Home
            li
                a.nav-link.px-2(href="#") Features
            li
                a.nav-link.px-2(href="#") Pricing
            li
                a.nav-link.px-2(href="#") FAQs
            li
                a.nav-link.px-2(href="#") About
        div.col-md-3.text-end
            button.btn.btn-outline-primary.me-2(type="button") Login
            button.btn.btn-primary(type="button") Sign-up
        